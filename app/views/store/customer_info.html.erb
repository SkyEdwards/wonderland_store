<%= form_for(@customer) do |f| %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br />
    
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br />

    <%= f.label :street_address %>
    <%= f.text_field :street_address %><br />

    <%= f.label :city %>
    <%= f.text_field :city %><br />
    
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %><br />   
    
    <%= f.label :province_id %>
    <%= f.collection_select :province_id, @provinces, :id, :name %><br />   
    
    <%= f.label :country %>
    <%= f.country_select :country, nil, :required => true %>  <br />   
    
    <%= f.label :email %>
    <%= f.text_field :email %><br />

    <%= f.submit %>

<% end %>
