<%= form_for(@customer) do |f| %>

    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>

    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>

    <%= f.label :email %><br />
    <%= f.text_field :email %>

    <%= f.label :image %><br />
    <%= f.text_field :image %>

    <%= f.label :notes %><br />
    <%= f.text_area :notes %>

    <%= f.label :province_id %><br />
    <%= f.collection_select :province_id, @provinces, :id, :name %>

    <%= f.submit %>

<% end %>
